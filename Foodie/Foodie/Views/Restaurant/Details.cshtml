@model Foodie.Models.Restaurant
@{
    ViewBag.Title = "Details";
}
<style>
    #map-canvas {
        width: 500px;
        height: 400px;
    }
</style>

<h2>Restaurant Details</h2>

@Html.ActionLink("Submit a Review!", "Create", "Review", new { restaurantId = Model.RestaurantId}, null)
<fieldset>
    <ol>
        <li>
            @Html.LabelFor(m => m.Name)
            @Html.DisplayFor(m => m.Name)
        </li>
        <li>
            @Html.LabelFor(m => m.FoodType)
            @Html.DisplayFor(m => m.FoodType)
        </li>
        <li>
            @Html.LabelFor(m => m.City)
            @Html.DisplayFor(m => m.City)
        </li>
        <li>
            @Html.LabelFor(m => m.State)
            @Html.DisplayFor(m => m.State)
        </li>
        <li>
            @Html.LabelFor(m => m.Country)
            @Html.DisplayFor(m => m.Country)
        </li>
        <li>
            @Html.LabelFor(m => m.Address)
            @Html.DisplayFor(m => m.Address)
        </li>
    </ol>
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script>
        function initialize() {
            var mapCanvas = document.getElementById('map-canvas');
            var mapOptions = {
                center: new google.maps.LatLng(43.0901497, -77.641321),
                zoom: 16,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            }
            var map = new google.maps.Map(mapCanvas, mapOptions)
        }
        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
    <div id="map-canvas"></div>
</fieldset>